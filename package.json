{
  "private": true,
  "name": "boilerplate",
  "description": "",
  "license": "",
  "scripts": {
    "build": "npm run build:css && remix build",
    "build:css": "tailwindcss -i ./src/styles/main.css -o ./src/styles/lib.css",
    "dev": "concurrently \"npm run dev:css\" \"remix watch\"",
    "dev:css": "tailwindcss -i ./src/styles/main.css -o ./src/styles/lib.css --watch",
    "postinstall": "remix setup node",
    "dev:netlify": "cross-env NODE_ENV=development netlify dev"
  },
  "dependencies": {
    "@netlify/functions": "^0.7.2",
    "@remix-run/netlify": "^1.1.1",
    "@remix-run/react": "^1.1.1",
    "@supabase/supabase-js": "^1.28.4",
    "dotenv": "^10.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.1.1"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.1.1",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "concurrently": "^6.4.0",
    "cross-env": "^7.0.3",
    "postcss": "^8.4.5",
    "tailwindcss": "^3.0.12",
    "typescript": "^4.1.2"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}
